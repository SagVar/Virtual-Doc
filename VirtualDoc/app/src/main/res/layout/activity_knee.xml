<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sagar.virtualdoc.Knee">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Symptoms :"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#ffc0076f" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="310dp"
        android:layout_marginTop="70dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fatigue"
                android:id="@+id/checkBox8"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:onClick="onKneeCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="red rash on body"
                android:id="@+id/checkBox9"
                android:layout_below="@+id/checkBox8"
                android:layout_alignLeft="@+id/checkBox8"
                android:layout_alignStart="@+id/checkBox8"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onKneeCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pain in concerned body part"
                android:id="@+id/checkBox10"
                android:layout_below="@+id/checkBox9"
                android:layout_alignLeft="@+id/checkBox9"
                android:layout_alignStart="@+id/checkBox9"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onKneeCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joint swelling"
                android:id="@+id/checkBox11"
                android:layout_below="@+id/checkBox10"
                android:layout_alignLeft="@+id/checkBox10"
                android:layout_alignStart="@+id/checkBox10"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onKneeCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stiffness of joints"
                android:id="@+id/checkBox12"
                android:textSize="20sp"
                android:layout_below="@+id/checkBox11"
                android:layout_alignLeft="@+id/checkBox11"
                android:layout_marginTop="5dp"
                android:onClick="onKneeCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="deformity of leg"
                android:id="@+id/checkBox13"
                android:layout_below="@+id/checkBox12"
                android:layout_alignLeft="@+id/checkBox12"
                android:layout_alignStart="@+id/checkBox12"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onKneeCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loss of functions in injured area"
                android:id="@+id/checkBox14"
                android:layout_below="@+id/checkBox13"
                android:layout_alignLeft="@+id/checkBox13"
                android:layout_alignStart="@+id/checkBox13"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onKneeCheckboxClicked"/>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="CONT>>"
        android:id="@+id/button22"
        android:textSize="20sp"
        android:minWidth="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="onKneeButtonClicked"/>

</RelativeLayout>
