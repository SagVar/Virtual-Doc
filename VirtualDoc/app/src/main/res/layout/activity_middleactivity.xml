<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.sagar.virtualdoc.middleactivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select body part:"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#ffc0076f"
        android:layout_marginTop="5dp"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:transitionGroup="false">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hands"
            android:id="@+id/radioButton10"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_marginTop="54dp"
            android:textSize="25sp"
            android:onClick="onMRadioButtonClicked"
            style="@style/CodeFont"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chest"
            android:id="@+id/radioButton11"
            android:layout_below="@+id/radioButton10"
            android:layout_alignRight="@+id/radioButton10"
            android:layout_alignEnd="@+id/radioButton10"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:onClick="onMRadioButtonClicked"
            style="@style/CodeFont"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stomach"
            android:id="@+id/radioButton12"
            android:layout_below="@+id/radioButton11"
            android:layout_alignRight="@+id/radioButton11"
            android:layout_alignEnd="@+id/radioButton11"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:onClick="onMRadioButtonClicked"
            style="@style/CodeFont"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/radioButton13"
            android:layout_below="@+id/radioButton12"
            android:layout_alignRight="@+id/radioButton12"
            android:layout_alignEnd="@+id/radioButton12"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:onClick="onMRadioButtonClicked"
            style="@style/CodeFont"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin"
            android:id="@+id/radioButton14"
            android:layout_below="@+id/radioButton13"
            android:layout_alignRight="@+id/radioButton13"
            android:layout_alignEnd="@+id/radioButton13"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:onClick="onMRadioButtonClicked"
            style="@style/CodeFont"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="&lt;&lt;BACK"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:textSize="20sp"
        android:minWidth="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="CONT>>"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="42dp"
        android:textSize="20sp"
        android:minWidth="100dp" />
</RelativeLayout>
