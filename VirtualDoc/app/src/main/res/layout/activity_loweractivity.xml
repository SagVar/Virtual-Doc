<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.sagar.virtualdoc.Loweractivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select body part:"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#ffc01a63"
        android:layout_marginTop="5dp"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:transitionGroup="false">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legs"
            android:id="@+id/radioButton17"
            android:layout_below="@+id/radioButton10"
            android:layout_alignRight="@+id/radioButton10"
            android:layout_alignEnd="@+id/radioButton10"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:onClick="onLRadioButtonClicked"
            style="@style/CodeFont"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Knee"
            android:id="@+id/radioButton18"
            android:layout_below="@+id/radioButton11"
            android:layout_alignRight="@+id/radioButton11"
            android:layout_alignEnd="@+id/radioButton11"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:onClick="onLRadioButtonClicked"
            style="@style/CodeFont"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groin"
            android:id="@+id/radioButton20"
            android:layout_below="@+id/radioButton13"
            android:layout_alignRight="@+id/radioButton13"
            android:layout_alignEnd="@+id/radioButton13"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:onClick="onLRadioButtonClicked"
            style="@style/CodeFont"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="&lt;&lt;BACK"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:textSize="20sp"
        android:minWidth="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="CONT>>"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="42dp"
        android:textSize="20sp"
        android:minWidth="100dp" />

</RelativeLayout>
