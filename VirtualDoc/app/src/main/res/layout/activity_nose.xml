<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sagar.virtualdoc.Nose">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Symptoms :"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#ffc0076f" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="310dp"
        android:layout_marginTop="70dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fatigue"
                android:id="@+id/checkBox41"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="red rash on body"
                android:id="@+id/checkBox42"
                android:layout_below="@+id/checkBox41"
                android:layout_alignLeft="@+id/checkBox41"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fever"
                android:id="@+id/checkBox43"
                android:layout_below="@+id/checkBox42"
                android:layout_alignLeft="@+id/checkBox42"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="headache/nausea"
                android:id="@+id/checkBox44"
                android:layout_below="@+id/checkBox43"
                android:layout_alignLeft="@+id/checkBox43"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="watery stool/diarrhea"
                android:id="@+id/checkBox45"
                android:layout_below="@+id/checkBox44"
                android:layout_alignLeft="@+id/checkBox44"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pain"
                android:id="@+id/checkBox46"
                android:layout_below="@+id/checkBox45"
                android:layout_alignLeft="@+id/checkBox45"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joint swelling"
                android:id="@+id/checkBox47"
                android:layout_below="@+id/checkBox46"
                android:layout_alignLeft="@+id/checkBox46"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shortness of breath / chest tightness"
                android:id="@+id/checkBox48"
                android:layout_below="@+id/checkBox47"
                android:layout_alignLeft="@+id/checkBox47"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coughing"
                android:id="@+id/checkBox49"
                android:layout_below="@+id/checkBox48"
                android:layout_alignLeft="@+id/checkBox48"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cold / runny nose"
                android:id="@+id/checkBox50"
                android:layout_below="@+id/checkBox49"
                android:layout_alignLeft="@+id/checkBox49"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vomiting"
                android:id="@+id/checkBox51"
                android:layout_below="@+id/checkBox50"
                android:layout_alignLeft="@+id/checkBox50"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weight loss"
                android:id="@+id/checkBox52"
                android:layout_below="@+id/checkBox51"
                android:layout_alignLeft="@+id/checkBox51"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="problems with blood clotting"
                android:id="@+id/checkBox53"
                android:layout_below="@+id/checkBox52"
                android:layout_alignLeft="@+id/checkBox52"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="discolored skin"
                android:id="@+id/checkBox54"
                android:layout_below="@+id/checkBox53"
                android:layout_alignLeft="@+id/checkBox53"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:onClick="onNoseCheckboxClicked"/>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="CONT>>"
        android:id="@+id/button10"
        android:textSize="20sp"
        android:minWidth="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="onNoseButtonClicked"/>

</RelativeLayout>
